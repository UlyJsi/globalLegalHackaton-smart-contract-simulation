<h1 align="center">Users</h4>

<div align="center">
    <% @users.each do |user| %>
        <ul class="listing">
            <div class="row">
                <div class="well col-md-4 col-md-offset-4">
                    <li class="article-title">
                        <%= link_to user.username, user_path(user) %>
                    </li>
                        <% if logged_in? && current_user.admin? %>
                            <li><%= link_to "Delete this user", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete the user and all his articles?"} %></li>
                        <% end %>
                </div>
            </div>
        </ul>
    <% end %>
</div>